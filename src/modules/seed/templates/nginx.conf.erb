server {
        server_name                        _;
        listen                             17333;

        access_log /var/log/nginx/seed.access.log proxy;
        error_log /var/log/nginx/seed.error.log;

        location / {
                <% if @external_host
                @allowed_ips.each {|ip| %>
                <%= "allow #{ip};" %>
                <% } %>
                deny all;
                <% end %>

                dav_methods  PUT;
                root /var/www;

                client_max_body_size 5G;
        }
}
