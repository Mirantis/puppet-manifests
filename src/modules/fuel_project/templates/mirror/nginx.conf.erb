server {
        server_name <%= @service_fqdn %> mirror.<%= @fqdn %> <%= @service_aliases.join(' ') %>;
        listen <%= @port %>;

        access_log /var/log/nginx/mirror.access.log proxy;
        error_log /var/log/nginx/mirror.error.log;

        location / {
                root <%= @dir %>;
                autoindex on;
        }
}
