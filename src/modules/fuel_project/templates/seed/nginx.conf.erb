server {
        server_name <%= @service_fqdn %>;
        listen <%= @seed_port %>;

        access_log /var/log/nginx/seed.access.log proxy;
        error_log /var/log/nginx/seed.error.log;

        location / {
                <% if @external_host
                @firewall_allow_sources.each {|ip| %>
                <%= "allow #{ip};" %>
                <% } %>
                deny all;
                <% end %>

                dav_methods  PUT;
                root <%= @seed_dir %>;

                client_max_body_size <%= @client_max_body_size %>;
        }
}
